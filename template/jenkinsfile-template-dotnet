@Library('shared-libs') _

pipeline {
    environment {
        branchname =  env.BRANCH_NAME.toLowerCase()
        kubeconfig = getKubeconf(env.branchname)
        namespace = "${env.branchname == 'test' ? 'testes' : env.branchname == 'release' ? 'testes-hom' : 'testes-prod' }"
        registryCredential = 'jenkins_registry'
        registryUrl = 'registryEndpoint'
        TELEGRAM_CHAT_ID = 'telegramChatIdTest' 
        SONAR_PROJECT = "DEVOPS-TESTES"
    }

    agent { kubernetes { 
            label 'builder-debian'
            defaultContainer 'builder-debian'
        }
    }

    options {
        ansiColor('xterm')
        buildDiscarder(logRotator(numToKeepStr: '10', artifactNumToKeepStr: '10'))
        disableConcurrentBuilds()
        timestamps ()
    }

    stages {
        stage('Tests') {
            when {
                expression {
                    if (env.BRANCH_NAME.startsWith('PR-')) {
                        return ['test', 'release'].contains(env.CHANGE_TARGET)
                    } else {
                        return ['test', 'release', 'master'].contains(env.BRANCH_NAME)
                    }
                }
            }
            steps {
                script {
                    env.failedStage = env.STAGE_NAME
                    script {
                        dotnetTest([
                            "Test: TesteIntegracao": [ // Nome que aparecerá no stage
                                testTool: "dotnet-coverage", // Ferramenta utilizada para o teste, conforme documentação: https://docs.sonarsource.com/sonarqube-server/2025.1/analyzing-source-code/test-coverage/dotnet-test-coverage
                                projectPath: "teste/SME.Acessos.TesteIntegracao", // diretorio do teste
                                stashName: "TesteIntegracao", // arquivo com o artefato do coverage
                                dotnetVersion: "dotnet-10" // versão da tool .NET
                            ],
                            "Test: TesteUnitario": [
                                testTool: "dotnet-coverage",
                                projectPath: "teste/SME.CDEP.TesteUnitario",
                                stashName: "TesteUnitario",
                                dotnetVersion: "dotnet-10"
                            ]
                        ])
                    }
                }
            }
        }

        stage('SonarQube') {
            when {
                expression {
                    if (env.BRANCH_NAME.startsWith('PR-')) {
                        return ['test', 'release'].contains(env.CHANGE_TARGET)
                    } else {
                        return ['test', 'release', 'master'].contains(env.BRANCH_NAME)
                    }
                }
            }
            steps {
                script {
                    env.failedStage = env.STAGE_NAME
                    // Este for captura os arquivos de coverage gerados no teste e não trava o sonar caso não encontre.
                    for (t in [
                        'TesteIntegracao',
                        'TesteUnitario'
                    ]) {
                        try {
                            unstash "${t}"
                        } catch (e) {
                            echo "Nenhum coverage encontrado para ${t}"
                        }
                    }

                    sonarqubeDotnet(
                        dotnetVersion: "dotnet-10", // tool .NET utilizada
                        coverageType: "dotnet-coverage", // qual ferramenta foi utilizada
                        project: "./src/SME.CDEP.Webapi/SME.CDEP.Webapi.csproj", // caminho do arquivo para dotnet build
                        coverageExclusions: "**/teste/**,**/*Dto.cs,**/*ViewModel.cs", // exclusões do coverage
                        sonarExclusions: "teste/**,**/Migrations/**,**/Configurations/**,**/*Dto.cs,**/*ViewModel.cs,**/Startup.cs,**/Program.cs" // exclusões da analise do sonar
                    )
                }
            }
        }

        stage("Sonar Quality gate") {
            // Adaptar when conforme realidade do projeto, alguns são executados apenas em PRs, então basta remover o else com return das branchs.
            when {
                expression {
                    if (env.BRANCH_NAME.startsWith('PR-')) {
                        return ['test', 'release'].contains(env.CHANGE_TARGET)
                    } else {
                        return ['test', 'release', 'master'].contains(env.BRANCH_NAME)
                    }
                }
            }
            steps {
                script {
                    env.failedStage = env.STAGE_NAME
                    timeout(15) {
                        def qg = waitForQualityGate()
                        if (qg.status != 'OK') {
                            error "Pipeline aborted due to quality gate failure: ${qg.status}"
                        }
                    }
                }
            }
        }

        stage('Dockerfile Check') {
            // Stage para checar a sintaxe e testar o Dockerfile, necessario em PRs, onde não existe o stage de build.
            when {
                expression {
                    if (env.BRANCH_NAME.startsWith('PR-')) {
                        return ['test', 'release'].contains(env.CHANGE_TARGET)
                    }
                }
            }
            steps {
                script {
                    env.failedStage = env.STAGE_NAME
                    def checkTasks = dockerfileCheck([
                        "devopsapp": [ // nome para imagem
                            dockerfilePath: "src/SME.CDEP.Webapi/Dockerfile" // Caminho do arquivo Dockerfile
                        ]
                    ])

                    parallel checkTasks
                }
            }
        }

        stage('Build') {
            when { anyOf { branch 'master'; branch 'release'; branch 'test'; } }
            steps {
                script {
                    env.failedStage = env.STAGE_NAME
                    def buildTasks = buildImage([
                        "devopsapp": [ // nome da imagem, é o valor do nome após o branch name, exemplo do nome final: registry.com/test/devopsapp
                            sendRegistry: "yes", // yes ou no
                            dockerfilePath: "Dockerfile" // Caminho do arquivo Dockerfile
                        ]
                    ])

                    parallel buildTasks
                }
            }
        }

        stage('Deploy') {
            when { anyOf { branch 'master'; branch 'release'; branch 'test'; } } 
            steps {
                script{
                    env.failedStage = env.STAGE_NAME
                    if ( env.branchname == 'main' ||  env.branchname == 'master' ) {
                        withCredentials([string(credentialsId: 'aprovadores-gipe', variable: 'aprovadores')]) {
                            timeout(time: 24, unit: "HOURS") {
                                approveTelegram(env.TELEGRAM_CHAT_ID)
                                def aprovadoPor = input(message: 'Deseja realizar o deploy?', ok: 'SIM', submitter: "${aprovadores}", submitterParameter: 'APPROVED_BY')
                                env.APROVADO_POR = "${aprovadoPor}"
                                approvedTelegram(env.TELEGRAM_CHAT_ID, env.APROVADO_POR)
                            }
                        }
                    }
                    withCredentials([file(credentialsId: "${kubeconfig}", variable: 'config')]){
                        def redeployTasks = restartDeployment([
                            "app": [ // nome do deployment
                                namespace: env.namespace // valor obtido do environment
                            ]
                        ])

                        parallel redeployTasks
                    }
                }
            }
        }

        stage('Flyway') {
            agent { kubernetes { 
                    label 'flyway'
                    defaultContainer 'flyway'
                }
            }
            when { anyOf { branch 'master'; branch 'release'; branch 'test'; } }
            steps{
                script {
                    failedStage = env.STAGE_NAME
                    withCredentials([string(credentialsId: "flyway_cdep_${branchname}", variable: 'url')]) {
                        sh 'flyway -url=$url -locations="filesystem:scripts" -outOfOrder=true migrate'
                    }
                }
            }       
        }
    }

    post {
        always { archiveArtifacts artifacts: "**/coverage.xml", allowEmptyArchive: true }
        success { successTelegram(env.TELEGRAM_CHAT_ID) }
        unstable { unstableTelegram(env.TELEGRAM_CHAT_ID) }
        failure { failureTelegram(env.failedStage, env.TELEGRAM_CHAT_ID) }
        aborted { abortedTelegram(env.TELEGRAM_CHAT_ID) }
    }
}