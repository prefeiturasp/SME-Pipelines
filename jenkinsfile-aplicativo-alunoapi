@Library('shared-libs') _

pipeline {
    environment {
        branchname =  env.BRANCH_NAME.toLowerCase()
        kubeconfig = getKubeconf(env.branchname)
        namespace = "${env.branchname == 'test' ? 'appaluno-qa' : env.branchname == 'homolog' ? 'appaluno-hom' : 'sme-appaluno' }"
        registryCredential = 'jenkins_registry'
        registryUrl = 'registryEndpoint'
        TELEGRAM_CHAT_ID = 'telegramChatIdSgp'
        SONAR_PROJECT = 'SME-Aplicativo-Aluno-API'
        DOTNET_DEFAULT = "dotnet-10"
    }

    agent { kubernetes { 
            label 'builder-debian'
            defaultContainer 'builder-debian'
        }
    }
    
    options {
        ansiColor('xterm')
        buildDiscarder(logRotator(numToKeepStr: '10', artifactNumToKeepStr: '10'))
        disableConcurrentBuilds()
        timestamps ()
    }

    stages {
        stage('Testes') {
            when {
                expression {
                    if (env.BRANCH_NAME.startsWith('PR-')) {
                        return ['test', 'homolog'].contains(env.CHANGE_TARGET)
                    } else {
                        return ['test', 'homolog', 'master'].contains(env.BRANCH_NAME)
                    }
                }
            }
            parallel {
                stage('Aplicacao') {
                    agent { kubernetes { label 'builder-debian'; defaultContainer 'builder-debian' } }
                    steps {
                        testDotnet([
                            testTool: "dotnet-coverage",
                            projectPath: "teste/SME.AE.Aplicacao.Teste",
                            stashName: "aplicacao",
                            dotnetVersion: env.DOTNET_DEFAULT
                        ])
                    }
                }

                stage('Dominio') {
                    agent { kubernetes { label 'builder-debian'; defaultContainer 'builder-debian' } }
                    steps {
                        testDotnet([
                            testTool: "dotnet-coverage",
                            projectPath: "teste/SME.AE.Dominio.Teste",
                            stashName: "dominio",
                            dotnetVersion: env.DOTNET_DEFAULT
                        ])
                    }
                }

                stage('Infra') {
                    agent { kubernetes { label 'builder-debian'; defaultContainer 'builder-debian' } }
                    steps {
                        testDotnet([
                            testTool: "dotnet-coverage",
                            projectPath: "teste/SME.AE.Infra.Teste",
                            stashName: "infra",
                            dotnetVersion: env.DOTNET_DEFAULT
                        ])
                    }
                }
            }
        }

        stage('SonarQube') {
            when {
                expression {
                    if (env.BRANCH_NAME.startsWith('PR-')) {
                        return ['test', 'homolog'].contains(env.CHANGE_TARGET)
                    } else {
                        return ['test', 'homolog', 'master'].contains(env.BRANCH_NAME)
                    }
                }
            }
            steps {
                script {
                    env.failedStage = env.STAGE_NAME
                    unstash 'aplicacao'
                    unstash 'dominio'
                    unstash 'infra'
                    
                    sonarqubeDotnet(
                        dotnetVersion: env.DOTNET_DEFAULT,
                        coverageType: "dotnet-coverage",
                        project: "SME-AcompanhamentoEscolar.sln",
                        coverageExclusions: "**/teste/**,**/*Dto.cs,**/*ViewModel.cs,**/Migrations/**",
                        sonarExclusions: "teste/**,**/Configurations/**,**/*Dto.cs,**/*ViewModel.cs,**/Startup.cs,**/Program.cs"
                    )
                }
            }
        }

        stage("Sonar Quality gate") {
            when {
                expression {
                    if (env.BRANCH_NAME.startsWith('PR-')) {
                        return ['test', 'homolog'].contains(env.CHANGE_TARGET)
                    }
                }
            }
            steps {
                script {
                    env.failedStage = env.STAGE_NAME
                    timeout(15) {
                        def qg = waitForQualityGate()
                        if (qg.status != 'OK') {
                            error "Pipeline aborted due to quality gate failure: ${qg.status}"
                        }
                    }
                }
            }
        }

        stage('Dockerfile Check') {
            when {
                expression {
                    if (env.BRANCH_NAME.startsWith('PR-')) {
                        return ['test', 'homolog'].contains(env.CHANGE_TARGET)
                    }
                }
            }
            steps {
                script {
                    env.failedStage = env.STAGE_NAME
                    dockerfileCheck(
                        imageName: "sme-appaluno-api",
                        dockerfilePath: "src/SME.AE.Api/Dockerfile"
                    )

                    dockerfileCheck(
                        imageName: "appaluno-worker",
                        dockerfilePath: "src/SME.AE.Worker.Service/Dockerfile"
                    )

                    dockerfileCheck(
                        imageName: "sme-ea-worker",
                        dockerfilePath: "src/SME.AE.Worker/Dockerfile"
                    )
                }
            }
        }

        stage('Build') {
            when { anyOf { branch 'master'; branch 'homolog'; branch 'test'; } }
            steps {
                script {
                    env.failedStage = env.STAGE_NAME
                    buildImage(
                        imageName: "sme-appaluno-api",
                        sendRegistry: "yes",
                        dockerfilePath: "src/SME.AE.Api/Dockerfile"
                    )

                    buildImage(
                        imageName: "appaluno-worker",
                        sendRegistry: "yes",
                        dockerfilePath: "src/SME.AE.Worker.Service/Dockerfile"
                    )

                    buildImage(
                        imageName: "sme-ea-worker",
                        sendRegistry: "yes",
                        dockerfilePath: "src/SME.AE.Worker/Dockerfile"
                    )
                }
            }
        }

        stage('Deploy') {
            when { anyOf { branch 'master'; branch 'homolog'; branch 'test'; } } 
            steps {
                script{
                    env.failedStage = env.STAGE_NAME
                    if ( env.branchname == 'master' ) {
                        withCredentials([string(credentialsId: 'aprovadores-appaluno', variable: 'aprovadores')]) {
                            timeout(time: 24, unit: "HOURS") {
                                approveTelegram(env.TELEGRAM_CHAT_ID)
                                def aprovadoPor = input(message: 'Deseja realizar o deploy?', ok: 'SIM', submitter: "${aprovadores}", submitterParameter: 'APPROVED_BY')
                                env.APROVADO_POR = "${aprovadoPor}"
                                approvedTelegram(env.TELEGRAM_CHAT_ID, env.APROVADO_POR)
                            }
                        }
                    }
                    
                    restartDeployment(
                        deploymentName: "appaluno-worker",
                        namespace: env.namespace
                    )

                    restartDeployment(
                        deploymentName: "sme-appaluno-api",
                        namespace: env.namespace
                    )

                    restartDeployment(
                        deploymentName: "sme-ea-worker",
                        namespace: env.namespace
                    )
                }
            }
        }

        stage('Flyway') { 
            agent { kubernetes { 
                    label 'flyway'
                    defaultContainer 'flyway'
                }
            }
            when { anyOf { branch 'master'; branch 'homolog'; branch 'test'; } }    
            steps{
                script {
                    env.failedStage = env.STAGE_NAME
                    withCredentials([file(credentialsId: "flyway_appaluno_${branchname}", variable: 'env')]) {
                        sh 'rm -rf flyway/flyway.conf'
                        sh 'touch flyway/flyway.conf'
                        sh 'cp "$env" "flyway/flyway.conf"'
                        sh 'flyway -configFiles=flyway/flyway.conf -locations="filesystem:scripts" -outOfOrder=true migrate'
                    }
                }
            }
        }
    }

    post {
        always { archiveArtifacts artifacts: "**/coverage.xml", allowEmptyArchive: true }
        success { successTelegram(env.TELEGRAM_CHAT_ID) }
        unstable { unstableTelegram(env.TELEGRAM_CHAT_ID) }
        failure { failureTelegram(env.failedStage, env.TELEGRAM_CHAT_ID) }
        aborted { abortedTelegram(env.TELEGRAM_CHAT_ID) }
        cleanup { cleanWs() }
    }
}