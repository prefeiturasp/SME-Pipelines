@Library('shared-libs') _

pipeline {
    environment {
        branchname =  env.BRANCH_NAME.toLowerCase()
        kubeconfig = getKubeconf(env.branchname)
        namespace = "${env.branchname == 'test' ? 'novasondagem-qa' : env.branchname == 'homolog' ? 'novasondagem-hom' : 'sme-novasondagem' }"
        registryCredential = 'jenkins_registry'
        registryUrl = 'registryEndpoint'
        TELEGRAM_CHAT_ID = 'telegramChatIdSgp' 
        SONAR_PROJECT = "SME-NOVASONDAGEM-BACKEND"
        DOTNET_DEFAULT = "dotnet-10"
    }

    agent { kubernetes { 
            label 'builder-debian'
            defaultContainer 'builder-debian'
        }
    }
    
    options {
        ansiColor('xterm')
        buildDiscarder(logRotator(numToKeepStr: '10', artifactNumToKeepStr: '10'))
        disableConcurrentBuilds()
        timestamps ()
        parallelsAlwaysFailFast()
    }

    stages {
        stage('Testes') {
            when {
                expression {
                    if (env.BRANCH_NAME.startsWith('PR-')) {
                        return ['test', 'homolog'].contains(env.CHANGE_TARGET)
                    } else {
                        return ['test', 'homolog', 'master'].contains(env.BRANCH_NAME)
                    }
                }
            }
            parallel {
                stage('API') {
                    agent { kubernetes { label 'builder-debian'; defaultContainer 'builder-debian' } }
                    steps {
                        testDotnet([
                            testTool: "dotnet-coverage",
                            projectPath: "teste/SME.Sondagem.API.Teste",
                            stashName: "api",
                            dotnetVersion: env.DOTNET_DEFAULT
                        ])
                    }
                }

                stage('Aplicação') {
                    agent { kubernetes { label 'builder-debian'; defaultContainer 'builder-debian' } }
                    steps {
                        testDotnet([
                            testTool: "dotnet-coverage",
                            projectPath: "teste/SME.Sondagem.Aplicacao.Teste",
                            stashName: "aplicacao",
                            dotnetVersion: env.DOTNET_DEFAULT
                        ])
                    }
                }

                stage('Dados') {
                    agent { kubernetes { label 'builder-debian'; defaultContainer 'builder-debian' } }
                    steps {
                        testDotnet([
                            testTool: "dotnet-coverage",
                            projectPath: "teste/SME.Sondagem.Dados.Teste",
                            stashName: "dados",
                            dotnetVersion: env.DOTNET_DEFAULT
                        ])
                    }
                }

                stage('Dominio') {
                    agent { kubernetes { label 'builder-debian'; defaultContainer 'builder-debian' } }
                    steps {
                        testDotnet([
                            testTool: "dotnet-coverage",
                            projectPath: "teste/SME.Sondagem.Dominio.Teste",
                            stashName: "dominio",
                            dotnetVersion: env.DOTNET_DEFAULT
                        ])
                    }
                }

                stage('Infra') {
                    agent { kubernetes { label 'builder-debian'; defaultContainer 'builder-debian' } }
                    steps {
                        testDotnet([
                            testTool: "dotnet-coverage",
                            projectPath: "teste/SME.Sondagem.Infra.Teste",
                            stashName: "infra",
                            dotnetVersion: env.DOTNET_DEFAULT
                        ])
                    }
                }

                stage('IoC') {
                    agent { kubernetes { label 'builder-debian'; defaultContainer 'builder-debian' } }
                    steps {
                        testDotnet([
                            testTool: "dotnet-coverage",
                            projectPath: "teste/SME.Sondagem.IoC.Teste",
                            stashName: "ioc",
                            dotnetVersion: env.DOTNET_DEFAULT
                        ])
                    }
                }
            }
        }

        stage('SonarQube') {
            when {
                expression {
                    if (env.BRANCH_NAME.startsWith('PR-')) {
                        return ['test', 'homolog'].contains(env.CHANGE_TARGET)
                    } else {
                        return ['test', 'homolog', 'master'].contains(env.BRANCH_NAME)
                    }
                }
            }
            steps {
                script {
                    env.failedStage = env.STAGE_NAME
                    unstash 'api'
                    unstash 'aplicacao'
                    unstash 'dados'
                    unstash 'dominio'
                    unstash 'infra'
                    unstash 'ioc'
                    
                    sonarqubeDotnet(
                        dotnetVersion: env.DOTNET_DEFAULT,
                        coverageType: "dotnet-coverage",
                        project: "SME.Sondagem.sln",
                        coverageExclusions: "**/teste/**,**/*Dto.cs,**/*ViewModel.cs,**/Migrations/**,**/Controllers/**",
                        sonarExclusions: "teste/**,**/Configurations/**,**/Migrations/**,**/*Dto.cs,**/*ViewModel.cs,**/Startup.cs,**/Program.cs"
                    )
                }
            }
        }

        stage("Sonar Quality gate") {
            when {
                expression {
                    if (env.BRANCH_NAME.startsWith('PR-')) {
                        return ['test', 'homolog'].contains(env.CHANGE_TARGET)
                    } else {
                        return ['test', 'homolog', 'master'].contains(env.BRANCH_NAME)
                    }
                }
            }
            steps {
                script {
                    env.failedStage = env.STAGE_NAME
                    timeout(15) {
                        def qg = waitForQualityGate()
                        if (qg.status != 'OK') {
                            error "Pipeline aborted due to quality gate failure: ${qg.status}"
                        }
                    }
                }
            }
        }

        stage('Dockerfile Check') {
            when {
                expression {
                    if (env.BRANCH_NAME.startsWith('PR-')) {
                        return ['test', 'homolog',].contains(env.CHANGE_TARGET)
                    }
                }
            }
            steps {
                script {
                    env.failedStage = env.STAGE_NAME
                    dockerfileCheck(
                        imageName: "test-sondagem-back",
                        dockerfilePath: "./src/SME.Sondagem.API/Dockerfile"
                    )
                }
            }
        }

        stage('Database Update') {
            when { anyOf { branch 'master'; branch 'homolog'; branch 'test'; } }
            steps {
                script {
                    env.failedStage = env.STAGE_NAME
                    
                    withDotNet(sdk: env.DOTNET_DEFAULT) {
                        withCredentials([string(credentialsId: "novasondagem_conn_${branchname}", variable: 'conn')]) {
                            sh '''
                                dotnet tool install --global dotnet-ef
                                export PATH="$PATH:$HOME/.dotnet/tools"
                                dotnet ef database update --project SME.Sondagem.Dados --startup-project SME.Sondagem.API --configuration test --connection "${conn}"
                            '''
                        }
                    }
                }
            }
        }
        
        stage('Build') {
            when { anyOf { branch 'master'; branch 'homolog'; branch 'test'; } }
            steps {
                script {
                    env.failedStage = env.STAGE_NAME
                    buildImage(
                        imageName: "sme-novasondagem-back",
                        sendRegistry: "yes",
                        dockerfilePath: "./src/SME.Sondagem.API/Dockerfile"
                    )
                }
            }
        }

        stage('Deploy') {
            when { anyOf { branch 'master'; branch 'homolog'; branch 'test'; } } 
            steps {
                script{
                    env.failedStage = env.STAGE_NAME
                    if ( env.branchname == 'master' ) {
                        withCredentials([string(credentialsId: 'aprovadores-sgp', variable: 'aprovadores')]) {
                            timeout(time: 24, unit: "HOURS") {
                                approveTelegram(env.TELEGRAM_CHAT_ID)
                                def aprovadoPor = input(message: 'Deseja realizar o deploy?', ok: 'SIM', submitter: "${aprovadores}", submitterParameter: 'APPROVED_BY')
                                env.APROVADO_POR = "${aprovadoPor}"
                                approvedTelegram(env.TELEGRAM_CHAT_ID, env.APROVADO_POR)
                            }
                        }
                    }
                    
                    restartDeployment(
                        deploymentName: "sme-novasondagem-back",
                        namespace: env.namespace
                    )
                }
            }
        }
    }

    post {
        always { archiveArtifacts artifacts: "**/coverage.xml", allowEmptyArchive: true }
        success { successTelegram(env.TELEGRAM_CHAT_ID) }
        unstable { unstableTelegram(env.TELEGRAM_CHAT_ID) }
        failure { failureTelegram(env.failedStage, env.TELEGRAM_CHAT_ID) }
        aborted { abortedTelegram(env.TELEGRAM_CHAT_ID) }
        cleanup { cleanWs() }
    }
}