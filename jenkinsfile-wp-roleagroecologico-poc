@Library('shared-libs') _

pipeline {
    environment {
        branchname =  env.BRANCH_NAME.toLowerCase()
        kubeconfig = 'config_wordpress'
        namespace = "${env.branchname == 'test' ? 'qa-roleagroecologico' : env.branchname == 'homolog' ? 'hom-roleagroecologico' : 'prod-roleagroecologico' }"
        registryCredential = 'harbor_svc_registry'
        registryUrl = 'HarborRegistryUrl'
        TELEGRAM_CHAT_ID = 'telegramChatIdTest' 
        SONAR_PROJECT = 'SME-ROLE-AGROECOLOGICO'
        project = "roleagroecologico"
        helmDir = "k8s/helm"
    }
  
    agent { kubernetes { 
            label 'builder-debian'
            defaultContainer 'builder-debian'
        }
    }

    options {
        ansiColor('xterm')
        timestamps ()
        buildDiscarder(logRotator(numToKeepStr: '20', artifactNumToKeepStr: '5'))
        disableConcurrentBuilds()
    }
  
    stages {
        stage('SonarQube') {
            when {
                expression {
                    if (env.BRANCH_NAME.startsWith('PR-')) {
                        return ['test', 'homolog'].contains(env.CHANGE_TARGET)
                    } else {
                        return ['test', 'homolog', 'master'].contains(env.BRANCH_NAME)
                    }
                }
            }
            steps {
                script {
                    failedStage = env.STAGE_NAME
                    sonarqubePhp(
                        dockerfilePath: "Dockerfile.apache, Dockerfile.php",
                        coverageExclusions: "Dockerfile**,**/testes/**,cypress.config.js",
                        sonarExclusions: "**/testes/**,cypress.config.js ",
                        sources: "wordpress/wp-content/themes/,wordpress/plugins-privados"
                    )
                }
            }
        }

        stage("Sonar Quality Gate") {
            when {
                expression {
                    if (env.BRANCH_NAME.startsWith('PR-')) {
                        return ['test', 'homolog'].contains(env.CHANGE_TARGET)
                    }
                }
            }
            steps {
                script {
                    env.failedStage = env.STAGE_NAME
                    timeout(15) {
                        def qg = waitForQualityGate()
                        if (qg.status != 'OK') {
                            error "Pipeline aborted due to quality gate failure: ${qg.status}"
                        }
                    }
                }
            }
        }

        stage('Dockerfile Check') {
            when {
                expression {
                    if (env.BRANCH_NAME.startsWith('PR-')) {
                        return ['test', 'homolog'].contains(env.CHANGE_TARGET)
                    }
                }
            }
            steps {
                script {
                    env.failedStage = env.STAGE_NAME
                    dockerfileCheck(
                        imageName: "roleagro-apache",
                        dockerfilePath: "Dockerfile.apache"
                    )

                    dockerfileCheck(
                        imageName: "roleagro-php",
                        dockerfilePath: "Dockerfile.php"
                    )
                }
            }
        }

        stage('Build') {
            when { anyOf { branch 'test'; branch 'homolog'; branch 'main'; } }
            steps {
                script {
                    env.failedStage = env.STAGE_NAME
                    
                    buildImageWithTags(
                        imageName: "apache",
                        sendRegistry: "yes",
                        dockerfilePath: "Dockerfile.apache"
                    )

                    buildImageWithTags(
                        imageName: "php",
                        sendRegistry: "yes",
                        dockerfilePath: "Dockerfile.php"
                    )
                }
            }
        }
        
        stage('Deploy QA'){
            when { anyOf {  branch 'test'; } }
            agent { kubernetes { 
                    label 'devops-tools'
                    defaultContainer 'devops-tools'
                }
            }   
            steps {
                script{                 
                    env.failedStage = env.STAGE_NAME
                    withCredentials([string(credentialsId: 'MYSQL_DEV_HOM', variable: 'database')]) {
                        sh '''
                            cd ${helmDir}

                            echo "CONFIGURANDO AMBIENTE"
                            export BRANCHNAME="${branchname}"
                            export AMBIENTE="qa"
                            export DATABASE_HOST="$database"
                            export DATABASE_NAME="${project}_qa"
                            export DATABASE_USER="usr_${project}_qa"
                            export IMAGE_TAG="${TAG}"
                            export INGRESS_HOST="qa-${project}.sme.prefeitura.sp.gov.br"
                            export WP_URL="http://${INGRESS_HOST}"

                            envsubst < values.yaml > values-qa.yaml
                            
                            # nodeAffinity pontual para QA
                            sed -i 's|nodeAffinity: qa|nodeAffinity: hom|g' values-qa.yaml
                        '''

                        helmUpgrade(
                            ambiente: "qa",
                            valuesFile: "values-qa.yaml",
                            replicas: "1"
                        )

                        restartDeployment(
                            deploymentName: "${project}-wp-stack",
                            namespace: env.namespace
                        )

                        sh('if [ -f '+"$home"+'/.kube/config ];then rm -f '+"$home"+'/.kube/config; fi')
                    }
                }
            }           
        }

        stage('Deploy Hom'){
            when { anyOf {  branch 'homolog'; } }
            agent { kubernetes { 
                    label 'devops-tools'
                    defaultContainer 'devops-tools'
                }
            }   
            steps {
                script{                 
                    env.failedStage = env.STAGE_NAME
                    withCredentials([string(credentialsId: 'MYSQL_DEV_HOM', variable: 'database'), file(credentialsId: 'config_wordpress', variable: 'config')]) {
                        sh '''
                            [ -f "$HOME/.kube/config" ] && rm -f "$HOME/.kube/config"
                            mkdir -p "$HOME/.kube"
                            cp "$config" "$HOME/.kube/config"
                            export KUBECONFIG="$HOME/.kube/config"

                            cd ${helmDir}

                            echo "CONFIGURANDO AMBIENTE"
                            export BRANCHNAME="${branchname}"
                            export AMBIENTE="hom"
                            export DATABASE_HOST="$database"
                            export DATABASE_NAME="${project}_hom"
                            export DATABASE_USER="usr_${project}_hom"
                            export IMAGE_TAG="${TAG}"
                            export INGRESS_HOST="hom-${project}.sme.prefeitura.sp.gov.br"
                            export WP_URL="http://${INGRESS_HOST}"

                            envsubst < values.yaml > values-hom.yaml

                            echo "REALIZANDO HELM UPGRADE"
                            helm upgrade ${project} . \
                                --namespace hom-${project} \
                                --set replicaCount=1 \
                                --values values-hom.yaml \
                                --install \
                                --history-max 3 \
                                --timeout 1m0s \
                                --atomic \
                                #--debug \
                                --wait
                        '''

                        restartDeployment(
                            deploymentName: "${project}-wp-stack",
                            namespace: env.namespace
                        )

                        sh('if [ -f '+"$home"+'/.kube/config ];then rm -f '+"$home"+'/.kube/config; fi')
                   }
                }
            }           
        }

        stage('Deploy Prod'){
            when { anyOf {  branch 'main'; } }
            agent { kubernetes { 
                    label 'devops-tools'
                    defaultContainer 'devops-tools'
                }
            }   
            steps {
                script{                 
                    env.failedStage = env.STAGE_NAME
                    if ( env.branchname == 'main' ||  env.branchname == 'master' ) {
                        withCredentials([string(credentialsId: 'aprovadores-wordpress', variable: 'aprovadores')]) {
                            timeout(time: 24, unit: "HOURS") {
                                approveTelegram(env.TELEGRAM_CHAT_ID)
                                def aprovadoPor = input(message: 'Deseja realizar o deploy?', ok: 'SIM', submitter: "${aprovadores}", submitterParameter: 'APPROVED_BY')
                                env.APROVADO_POR = "${aprovadoPor}"
                                approvedTelegram(env.TELEGRAM_CHAT_ID, env.APROVADO_POR)
                            }
                        }
                    }
                    withCredentials([string(credentialsId: 'MYSQL_PROD', variable: 'database'), file(credentialsId: 'config_wordpress', variable: 'config')]) {
                        sh '''
                            [ -f "$HOME/.kube/config" ] && rm -f "$HOME/.kube/config"
                            mkdir -p "$HOME/.kube"
                            cp "$config" "$HOME/.kube/config"
                            export KUBECONFIG="$HOME/.kube/config"
                        
                            cd ${helmDir}

                            echo "CONFIGURANDO AMBIENTE"
                            export BRANCHNAME="${branchname}"
                            export AMBIENTE="prod"
                            export DATABASE_HOST="$database"
                            export DATABASE_NAME="${project}_prod"
                            export DATABASE_USER="usr_${project}_prod"
                            export IMAGE_TAG="${TAG}"
                            export INGRESS_HOST="${project}.sme.prefeitura.sp.gov.br"
                            export WP_URL="http://${INGRESS_HOST}"
                        
                            envsubst < values.yaml > values-prod.yaml
                        
                            echo "REALIZANDO HELM UPGRADE"
                            helm upgrade ${project} . \
                                --namespace prod-${project} \
                                --set replicaCount=1 \
                                --values values-prod.yaml \
                                --install \
                                --history-max 3 \
                                --timeout 1m0s \
                                --atomic \
                                #--debug \
                                --wait
                        '''
                        
                        restartDeployment(
                            deploymentName: "${project}-wp-stack",
                            namespace: env.namespace
                        )

                        sh('if [ -f '+"$home"+'/.kube/config ];then rm -f '+"$home"+'/.kube/config; fi')
                    }
                }
            }
        }
    }

    post {
        // always { archiveArtifacts artifacts: "coverage.xml", allowEmptyArchive: true }
        success { successTelegram(env.TELEGRAM_CHAT_ID) }
        unstable { unstableTelegram(env.TELEGRAM_CHAT_ID) }
        failure { failureTelegram(env.failedStage, env.TELEGRAM_CHAT_ID) }
        aborted { abortedTelegram(env.TELEGRAM_CHAT_ID) }
        cleanup { cleanWs() }
    }
}