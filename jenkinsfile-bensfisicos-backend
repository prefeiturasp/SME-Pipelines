@Library('shared-libs') _

pipeline {
    environment {
        branchname =  env.BRANCH_NAME.toLowerCase()
        kubeconfig = getKubeconf(env.branchname)
        namespace = "${env.branchname == 'test' ? 'testes' : env.branchname == 'homolog' ? 'testes-hom' : 'testes-prod' }"
        deployment = "${env.branchname == 'homolog' ? 'bensfisicos-back' : 'bensfisicos-backend' }"
        registryCredential = 'jenkins_registry'
        registryUrl = 'registryEndpoint'
        TELEGRAM_CHAT_ID = 'telegramChatIdCoserv' 
        SONAR_PROJECT = "SME-BensFisicos-BackEnd"
    }

    agent { kubernetes { 
            label 'builder-debian'
            defaultContainer 'builder-debian'
        }
    }

    options {
        ansiColor('xterm')
        buildDiscarder(logRotator(numToKeepStr: '10', artifactNumToKeepStr: '10'))
        disableConcurrentBuilds()
        timestamps ()
    }

    stages {
        // ##### NÃO POSSUI TESTE
        // stage('Testes') {
        //     agent { kubernetes { 
        //             label 'python311'
        //             defaultContainer 'python311'
        //         }
        //     }
        //     when {
        //         expression {
        //             if (env.BRANCH_NAME.startsWith('PR-')) {
        //                 return ['test', 'homolog', 'master'].contains(env.CHANGE_TARGET)
        //             } else {
        //                 return ['test', 'homolog', 'master'].contains(env.BRANCH_NAME)
        //             }
        //         }
        //     }
        //     steps {
        //         script {
        //             env.failedStage = env.STAGE_NAME
                    
        //             pythonTest(
        //                 requirementsDir: "requirements.txt",
        //                 withMigration: "true",
        //                 credentialEnv: "bensfisicos_env",
        //                 testCommand: "coverage run -m pytest"
        //             )
        //         }
        //     }
        // }

        stage('SonarQube') {
            when {
                expression {
                    if (env.BRANCH_NAME.startsWith('PR-')) {
                        return ['test', 'homolog', 'master'].contains(env.CHANGE_TARGET)
                    } else {
                        return ['test', 'homolog', 'master'].contains(env.BRANCH_NAME)
                    }
                }
            }
            steps {
                script {
                    env.failedStage = env.STAGE_NAME
                    
                    sonarqubePython(
                        dockerfilePath: "./Dockerfile",
                        coverageExclusions: "Dockerfile*,**/testes/**,cypress.config.js,src/styles/**,**/.next/**,**/*.test.tsx,**/*.test.ts,**/setupTests.ts",
                        sonarExclusions: "**/testes/**,cypress.config.js,**/.next/**,**/*.test.tsx,**/*.test.ts,**/setupTests.ts,src/components/ui/**"
                    )
                }
            }
        }

        stage("Sonar Quality Gate") {
           when {
                expression {
                    if (env.BRANCH_NAME.startsWith('PR-')) {
                        return ['test', 'homolog', 'master'].contains(env.CHANGE_TARGET)
                    }
                }
            }
            steps {
                script {
                    failedStage = env.STAGE_NAME
                    timeout(15) {
                        def qg = waitForQualityGate()
                        if (qg.status != 'OK') {
                            error "Pipeline aborted due to quality gate failure: ${qg.status}"
                        }
                    }
                }
            }
        }

        stage('Dockerfile Check') {
           when {
                expression {
                    if (env.BRANCH_NAME.startsWith('PR-')) {
                        return ['test', 'homolog', 'master'].contains(env.CHANGE_TARGET)
                    }
                }
            }
            steps {
                script {
                    env.failedStage = env.STAGE_NAME
                    dockerfileCheck(
                        imageName: "bensfisicos-back",
                        dockerfilePath: "Dockerfile"
                    )
                }
            }
        }

        stage('Build') {
            when { anyOf { branch 'master'; branch 'homolog'; branch 'test'; } }
            steps {
                script {
                    env.failedStage = env.STAGE_NAME
                    buildImage(
                        imageName: "bensfisicos-back",
                        sendRegistry: "yes",
                        dockerfilePath: "Dockerfile"
                    )
                }
            }
        }

        stage('Migrations') {
            when { anyOf { branch 'master'; branch 'homolog'; branch 'test'; } }
            steps {
                script {
                    withCredentials([file(credentialsId: "${kubeconfig}", variable: 'config')]){
                        echo 'Executando migrações'
                        catchError(buildResult: 'SUCCESS', stageResult: 'FAILURE') {
                            sh '''
                                [ -f "$HOME/.kube/config" ] && rm -f "$HOME/.kube/config"
                                mkdir -p "$HOME/.kube"
                                cp "$config" "$HOME/.kube/config"
                                export KUBECONFIG="$HOME/.kube/config"
                                
                                kubectl scale deployment/migrate --replicas=0 -n ${namespace}
                                sleep 30

                                kubectl scale deployment/migrate --replicas=1 -n ${namespace}
                                sleep 30
                            '''
                            sh 'kubectl exec -it deployment/migrate -n ${namespace} -- python manage.py migrate'
                            sh 'kubectl exec -it deployment/migrate -n ${namespace} -- python manage.py setup_grupos_e_permissoes'
                            sh 'kubectl exec -it deployment/migrate -n ${namespace} -- python manage.py showmigrations'
                            sh 'kubectl scale deployment/migrate --replicas=0 -n ${namespace}'
                        }
                    }
                }
            }
        }
        
        stage('Deploy') {
            when { anyOf { branch 'master'; branch 'homolog'; branch 'test'; } }    
            steps {
                script{
                    env.failedStage = env.STAGE_NAME
                    if ( env.branchname == 'master' ) {
                        withCredentials([string(credentialsId: 'aprovadores-bensfisicos', variable: 'aprovadores')]) {
                            timeout(time: 24, unit: "HOURS") {
                                approveTelegram(env.TELEGRAM_CHAT_ID)
                                def aprovadoPor = input(message: 'Deseja realizar o deploy?', ok: 'SIM', submitter: "${aprovadores}", submitterParameter: 'APPROVED_BY')
                                env.APROVADO_POR = "${aprovadoPor}"
                                approvedTelegram(env.TELEGRAM_CHAT_ID, env.APROVADO_POR)
                            }
                        }
                    }
                    
                    restartDeployment(
                        deploymentName: env.deployment,
                        namespace: env.namespace
                    )
                }
            }
        }
    }

    post {
        always { archiveArtifacts artifacts: "coverage.xml", allowEmptyArchive: true }
        success { successTelegram(env.TELEGRAM_CHAT_ID) }
        unstable { unstableTelegram(env.TELEGRAM_CHAT_ID) }
        failure { failureTelegram(env.failedStage, env.TELEGRAM_CHAT_ID) }
        aborted { abortedTelegram(env.TELEGRAM_CHAT_ID) }
        cleanup { cleanWs() }
    }
}