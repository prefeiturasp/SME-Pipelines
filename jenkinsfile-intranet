        //                     mkdir -p "$HOME/.kube"
        //                     cp "$config" "$HOME/.kube/config"
        //                     export KUBECONFIG="$HOME/.kube/config"

        //                     kubectl rollout restart deployment/prod-intranet -n prod-intranet
        //                 '''
        //            }
        //         }
        //     }           
        // }

        // stage('Deploy Hom'){
