@Library('shared-libs') _

pipeline {
    environment {
        branchname =  env.BRANCH_NAME.toLowerCase()
        registryCredential = 'jenkins_registry'
        SONAR_PROJECT = 'SME-VISITASMONITORADAS'
        TELEGRAM_CHAT_ID = 'telegramChatIdWordpress'
    }
  
	agent { kubernetes { 
            label 'builder-debian'
            defaultContainer 'builder-debian'
        }
    }

    options {
        ansiColor('xterm')
        timestamps ()
        buildDiscarder(logRotator(numToKeepStr: '20', artifactNumToKeepStr: '5'))
        disableConcurrentBuilds()
    }
  
    stages {
        stage('SonarQube') {
            steps {
                script {
                    env.failedStage = env.STAGE_NAME
                    def scannerHome = tool 'sonarscanner-7.2.0';
                    withSonarQubeEnv('sonarqube-sme'){
                        sh"""
                            ${scannerHome}/bin/sonar-scanner \
                                -Dsonar.projectKey=${SONAR_PROJECT} \
                                -Dsonar.branch.name=${branchname} \
                                -Dsonar.python.coverage.reportPaths=coverage.xml \
                                -Dsonar.exclusions=**/testes/**,cypress.config.js \
                                -Dsonar.coverage.exclusions=Dockerfile,**/testes/**,cypress.config.js \
                                -Dsonar.docker.file.patterns=Dockerfile \
                                -Dsonar.sources=wp-content/themes/
                        """
                    }
                }
            }
        }

        // stage("Sonar Quality gate") {
        //     steps {
        //         script {
        //             env.failedStage = env.STAGE_NAME
        //             timeout(15) {
        //                 def qg = waitForQualityGate()
        //                 if (qg.status != 'OK') {
        //                     error "Pipeline aborted due to quality gate failure: ${qg.status}"
        //                 }
        //             }
        //         }
        //     }
        // }

        stage('Build') {
            when { anyOf { branch 'master'; branch 'homolog'; } } 
            steps {
                script {
                    env.failedStage = env.STAGE_NAME
                    imagename1 = "registry.sme.prefeitura.sp.gov.br/wordpress/${env.branchname}/visitasmonitoradas"
                    dockerImage1 = docker.build(imagename1, "-f Dockerfile .")
                    docker.withRegistry( 'https://registry.sme.prefeitura.sp.gov.br', registryCredential ) {
                        dockerImage1.push()
                    }
                    sh "docker rmi $imagename1"
                }
            }
        }
        
        stage('Deploy Hom'){
            when { anyOf {  branch 'homolog'; } }        
            steps {
                script{                 
                    env.failedStage = env.STAGE_NAME
                    withCredentials([file(credentialsId: 'config_wordpress', variable: 'config')]){
                        sh '''
                            [ -f "$HOME/.kube/config" ] && rm -f "$HOME/.kube/config"
                            mkdir -p "$HOME/.kube"
                            cp "$config" "$HOME/.kube/config"
                            export KUBECONFIG="$HOME/.kube/config"

                            kubectl rollout restart deployment/hom-visitasmonitoradas -n hom-visitasmonitoradas
                        '''
                   }
                }
            }           
        }

        stage('Deploy Prod'){
            when { anyOf {  branch 'master'; } }        
            steps {
                script{
                    env.failedStage = env.STAGE_NAME
                    if ( env.branchname == 'master' ) {
                        withCredentials([string(credentialsId: 'aprovadores-wordpress', variable: 'aprovadores')]) {
                            timeout(time: 24, unit: "HOURS") {
                                approveTelegram(env.TELEGRAM_CHAT_ID)
                                def aprovadoPor = input(message: 'Deseja realizar o deploy?', ok: 'SIM', submitter: "${aprovadores}", submitterParameter: 'APPROVED_BY')
                                env.APROVADO_POR = "${aprovadoPor}"
                                approvedTelegram(env.TELEGRAM_CHAT_ID, env.APROVADO_POR)
                            }
                        }
                    }                    
                    withCredentials([file(credentialsId: 'config_wordpress', variable: 'config')]){
                        sh '''
                            [ -f "$HOME/.kube/config" ] && rm -f "$HOME/.kube/config"
                            mkdir -p "$HOME/.kube"
                            cp "$config" "$HOME/.kube/config"
                            export KUBECONFIG="$HOME/.kube/config"

                            kubectl rollout restart deployment/prod-visitasmonitoradas -n prod-visitasmonitoradas
                        '''
                   }
                }
            }           
        }            
    }
}
